import java.io.*;
import java.util.*;

public class Solution {

    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        String s = sc.nextLine();
        char s2 = sc.next().charAt(0);
        int n= s.length();
        int count=0;
        for(int i=0;i<n;i++){
            if(s.charAt(i)==s2)
                count++;
        }
        System.out.println(count);
    }
}
